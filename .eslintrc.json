{
  "env": {
    "es2021": true,
    "node": true,
    "cypress/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:cypress/recommended"
  ],
  "plugins": ["cypress"],
  "rules": {
    "cypress/no-force": "error",                         // Proíbe uso de { force: true } — boa prática
    "cypress/assertion-before-screenshot": "error",      // Exige asserção antes de tirar screenshot
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }], // Evita erro em variáveis não usadas
    "no-console": "warn"                                 // Evita console.log em produção
  }
}

