{
  "languageOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "globals": {
      "cy": "readonly",
      "Cypress": "readonly"
    }
  },
  "plugins": ["cypress"],
  "extends": ["plugin:cypress/recommended"],
  "rules": {
    "cypress/no-force": "error",
    "cypress/assertion-before-screenshot": "error",
    "cypress/no-pause": "error"
  }
}
